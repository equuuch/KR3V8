<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns:fx="http://javafx.com/fxml"
         fx:controller="com.example.kr3v8.KindergartenController"
         tabClosingPolicy="UNAVAILABLE">

    <!-- Вкладка 1: ДЕТИ -->
    <Tab text="Воспитанники">
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <!-- Поле ПОИСКА -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Поиск:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="searchField" promptText="Имя ребенка или группа..." HBox.hgrow="ALWAYS"/>
            </HBox>

            <TableView fx:id="childTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="cNameCol" text="ФИО Ребенка" />
                    <TableColumn fx:id="cAgeCol" text="Возраст" />
                    <TableColumn fx:id="cGroupCol" text="Группа" />
                    <TableColumn fx:id="cParentCol" text="Родитель" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <TextField fx:id="cNameInput" promptText="ФИО ребенка" />
                <TextField fx:id="cAgeInput" promptText="Возраст" prefWidth="60"/>
                <TextField fx:id="cGroupInput" promptText="Группа" />
                <TextField fx:id="cParentInput" promptText="ФИО Родителя" />

                <Button text="Зачислить" onAction="#onAddChild" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Отчислить" onAction="#onDeleteChild" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </Tab>

    <!-- Вкладка 2: СОТРУДНИКИ -->
    <Tab text="Персонал">
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <TableView fx:id="staffTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="sNameCol" text="ФИО Сотрудника" />
                    <TableColumn fx:id="sPosCol" text="Должность" />
                    <TableColumn fx:id="sPhoneCol" text="Телефон" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <TextField fx:id="sNameInput" promptText="ФИО" />
                <TextField fx:id="sPosInput" promptText="Должность" />
                <TextField fx:id="sPhoneInput" promptText="Телефон" />

                <Button text="Нанять" onAction="#onAddStaff" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Уволить" onAction="#onDeleteStaff" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </Tab>
</TabPane>